<Window x:Class="Telhai.DotNet.PlayerProject.SongEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Song Editor" Height="500" Width="600"
        Background="#222" WindowStartupLocation="CenterOwner">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" Text="Edit Song Details" FontSize="22" FontWeight="Bold" 
                   Foreground="White" Margin="0,0,0,20"/>

        <!-- Song Details Section -->
        <Border Grid.Row="1" Background="#333" CornerRadius="8" Padding="15" Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Song Title -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Song Title:" 
                           Foreground="#AAA" VerticalAlignment="Center" Margin="0,5"/>
                <TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}" 
                         Background="#444" Foreground="White" BorderBrush="#555" Padding="8,5" Margin="0,5"/>

                <!-- Artist Name -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Artist:" 
                           Foreground="#AAA" VerticalAlignment="Center" Margin="0,5"/>
                <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding ArtistName, UpdateSourceTrigger=PropertyChanged}" 
                         Background="#444" Foreground="White" BorderBrush="#555" Padding="8,5" Margin="0,5"/>

                <!-- Album Name -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Album:" 
                           Foreground="#AAA" VerticalAlignment="Center" Margin="0,5"/>
                <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding AlbumName, UpdateSourceTrigger=PropertyChanged}" 
                         Background="#444" Foreground="White" BorderBrush="#555" Padding="8,5" Margin="0,5"/>

                <!-- File Path (Read-only) -->
                <TextBlock Grid.Row="3" Grid.Column="0" Text="File Path:" 
                           Foreground="#777" VerticalAlignment="Center" Margin="0,5"/>
                <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding FilePath}" 
                           Foreground="#666" FontSize="11" VerticalAlignment="Center" 
                           TextTrimming="CharacterEllipsis" Margin="0,5"/>
            </Grid>
        </Border>

        <!-- Album Art Section -->
        <Border Grid.Row="2" Background="#333" CornerRadius="8" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Selected Image Preview -->
                <Border Grid.Column="0" Background="#444" CornerRadius="5" Width="130" Height="130" 
                        VerticalAlignment="Top">
                    <Image x:Name="imgPreview" Stretch="UniformToFill" 
                           Source="{Binding SelectedArtwork}"/>
                </Border>

                <!-- Image List and Controls -->
                <Grid Grid.Column="1" Margin="15,0,0,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="Album Art Images:" Foreground="#AAA" 
                               FontWeight="Bold" Margin="0,0,0,8"/>

                    <!-- Images List -->
                    <ListBox Grid.Row="1" x:Name="lstImages" 
                             ItemsSource="{Binding ArtworkUrls}" 
                             SelectedItem="{Binding SelectedArtwork}"
                             Background="#444" Foreground="White" BorderBrush="#555"
                             MinHeight="80">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="2">
                                    <Border Width="30" Height="30" Background="#333" CornerRadius="3" Margin="0,0,8,0">
                                        <Image Source="{Binding}" Stretch="UniformToFill"/>
                                    </Border>
                                    <TextBlock Text="{Binding}" VerticalAlignment="Center" 
                                               TextTrimming="CharacterEllipsis" MaxWidth="250"
                                               FontSize="11" Foreground="#CCC"/>
                                </StackPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>

                    <!-- Image Buttons -->
                    <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,10,0,0">
                        <Button Content="Add Image" Command="{Binding AddImageCommand}" 
                                Width="90" Height="30" Margin="0,0,8,0"
                                Background="#007ACC" Foreground="White"/>
                        <Button Content="Remove" Command="{Binding RemoveImageCommand}" 
                                Width="80" Height="30"
                                Background="#CC4444" Foreground="White"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- Bottom Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Cancel" x:Name="btnCancel" Click="BtnCancel_Click" 
                    Width="90" Height="35" Margin="0,0,10,0"
                    Background="#555" Foreground="White"/>
            <Button Content="Save" Command="{Binding SaveCommand}" 
                    Width="90" Height="35"
                    Background="#28a745" Foreground="White" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</Window>
